<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Configure PUBLIC "-//Mort Bay Consulting//DTD Configure//EN" "http://www.eclipse.org/jetty/configure.dtd">
<Configure id="wac" class="org.eclipse.jetty.webapp.WebAppContext">
	<New id="ArgueDB" class="org.eclipse.jetty.plus.jndi.Resource">
		<Arg>jdbc/ArgueDB</Arg>
		<Arg>
			<New class="org.apache.commons.dbcp.BasicDataSource">
				<Set name="driverClassName">org.postgresql.Driver</Set>
				<Set name="url">jdbc:postgresql://localhost/argue</Set>
				<Set name="username">argue</Set>
				<Set name="password">argufactum</Set>
				
				<Set name="driverClassName">org.h2.Driver</Set>
				<Set name="url">jdbc:h2:mem:argueTest;DB_CLOSE_DELAY=60;DB_CLOSE_ON_EXIT=FALSE</Set>
			</New>
		</Arg>
	</New>
</Configure>