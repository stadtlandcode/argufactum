<beans:beans xmlns="http://www.springframework.org/schema/security" xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
           http://www.springframework.org/schema/security
           http://www.springframework.org/schema/security/spring-security-3.1.xsd">

	<global-method-security jsr250-annotations="enabled" />

	<http access-denied-page="/accessDenied" entry-point-ref="ajaxAwareAuthenticationEntryPoint" disable-url-rewriting="true">
		<intercept-url pattern="/login*" access="IS_AUTHENTICATED_ANONYMOUSLY" requires-channel="${loginProtocol}" />
		<intercept-url pattern="/register*" access="IS_AUTHENTICATED_ANONYMOUSLY" requires-channel="${loginProtocol}" />
		<intercept-url pattern="/**" access="IS_AUTHENTICATED_ANONYMOUSLY" requires-channel="any" />

		<form-login login-page="/login" login-processing-url="/login/process" password-parameter="password" username-parameter="username"
			authentication-success-handler-ref="ajaxAwareAuthenticationSuccessHandler" />
		<openid-login login-processing-url="/login/openid/process" user-service-ref="openIdUserDetailsService"
			authentication-failure-handler-ref="openIdAuthenticationFailureHandler" authentication-success-handler-ref="ajaxAwareAuthenticationSuccessHandler">
			<attribute-exchange>
				<openid-attribute name="email" type="http://axschema.org/contact/email" required="true" />
			</attribute-exchange>
		</openid-login>
		<logout logout-url="/logout" logout-success-url="/" />
		
		<remember-me use-secure-cookie="false" data-source-ref="dataSource" token-validity-seconds="2592000" key="${rememberMeKey}" user-service-ref="formLoginUserDetailsService" />
		
		<session-management>
			<concurrency-control max-sessions="5" error-if-maximum-exceeded="true" />
		</session-management>
	</http>

	<authentication-manager>
		<authentication-provider ref="daoAuthenticationProvider" />
	</authentication-manager>
	
	<beans:bean id="ajaxAwareAuthenticationEntryPoint" class="de.ifcore.argue.security.AjaxAwareAuthenticationEntryPoint">
		<beans:constructor-arg value="/login" />
	</beans:bean>
	
	<beans:bean id="ajaxAwareAuthenticationSuccessHandler" class="de.ifcore.argue.security.AjaxAwareAuthenticationSuccessHandler">
		<beans:property name="defaultTargetUrl" value="/" />
	</beans:bean>
	
	<beans:bean id="openIdAuthenticationFailureHandler" class="de.ifcore.argue.security.OpenIdAuthenticationFailureHandler">
		<beans:property name="defaultRegistrationUrl" value="/registration/openIdSignUp" />
		<beans:property name="defaultFailureUrl" value="/login" />
		<beans:property name="trustedProviders">
			<beans:set>
				<beans:value>https://www.google.com</beans:value>
			</beans:set>
		</beans:property>
	</beans:bean>

	<beans:bean id="passwordEncoder" class="org.springframework.security.crypto.password.StandardPasswordEncoder">
		<beans:constructor-arg value="${passwordEncoderSecret}" />
	</beans:bean>
	<beans:bean id="daoAuthenticationProvider" class="de.ifcore.argue.security.ArgueDaoAuthenticationProvider">
		<beans:property name="userDetailsService" ref="formLoginUserDetailsService" />
		<beans:property name="passwordEncoder" ref="passwordEncoder" />
	</beans:bean>
	
	<beans:bean class="de.ifcore.argue.security.ForwardedChannelDecisionBeanPostProcessor" />
</beans:beans>