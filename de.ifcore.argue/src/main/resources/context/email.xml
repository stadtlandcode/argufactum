<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

	<bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
		<property name="host" value="${mailHost}" />
		<property name="port" value="${mailPort}" />
		<property name="username" value="${mailUsername}" />
		<property name="password" value="${mailPassword}" />
		<property name="javaMailProperties">
			<props>
				<prop key="mail.smtp.auth">${mailSmtpAuth}</prop>
				<prop key="mail.smtp.starttls.enable">${mailStartTls}</prop>
			</props>
		</property>
	</bean>

	<bean id="velocityEngine" class="org.springframework.ui.velocity.VelocityEngineFactoryBean">
		<property name="resourceLoaderPath" value="/WEB-INF/velocity/"/>
	</bean>

	<bean id="emailAddressService" class="de.ifcore.argue.services.EmailAddressServiceImpl">
		<constructor-arg>
			<map>
				<entry key="REGISTRATION" value="${registrationEmailAddress}" />
			</map>
		</constructor-arg>
	</bean>
	
	<bean id="emailService" class="de.ifcore.argue.services.EmailServiceImpl">
		<property name="supportedLanguages">
			<set>
				<value>de</value>
			</set>
		</property>
	</bean>
</beans>