<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">
	
	<bean id="seleniumDriverService" class="de.ifcore.argue.selenium.SeleniumDriverService">
		<property name="url" value="http://localhost" />
		<property name="port" value="8080" />
		<property name="chromeDriverLocation" value="/opt/chromedriver" />
		<property name="sharedLoginProvided" value="false" />
	</bean>
</beans>